<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/loginFragment">
    <fragment android:id="@+id/loginFragment" android:name="com.scissorboy.scissorboytest.LoginFragment"
              android:label="LoginFragment" tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/action_loginFragment_to_homeFragment"
                app:destination="@id/homeFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment android:id="@+id/homeFragment" android:name="com.scissorboy.scissorboytest.HomeFragment"
              android:label="fragment_home" tools:layout="@layout/fragment_home"/>
    <argument
            android:name="usernameToShow"
            android:defaultValue="Unknown"
            app:argType="string" />
</navigation>